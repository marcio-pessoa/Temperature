#include <LM35.h>

// Set up LM35 on analog pin 0 and use Celcius unit measure
LM35 sensor(0, 'C');

void setup() {
  Serial.begin(9600);
}

void loop() {
  sensor.unit('F'); // change unit to F
  Serial.print("Fahrenheit: ");
  Serial.println(sensor.temperature());

  sensor.unit('K'); // change unit to K
  Serial.print("Kelvin: ");
  Serial.println(sensor.temperature());

  sensor.unit('C'); // change unit to C
  Serial.print("Celcius: ");
  Serial.println(sensor.temperature());

  Serial.println("");
  delay(2000);
}
